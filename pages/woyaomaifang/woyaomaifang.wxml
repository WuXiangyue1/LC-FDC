<!-- 容器 -->
<view class='con-box'>
	<!-- 图标显示进程 -->
	<view class='head-box'>
		<span style='color:red' class="iconfont icon-diannao"></span>
		<view class="iconfont icon-jiantou-you"></view>
		<span class="iconfont icon-dianhua"></span>
		<view class="iconfont icon-jiantou-you"></view>
		<span class="iconfont icon-fangyuanchaxun"></span>
	</view>
	<view class='raduce'>
		<span style='color:red'>线上发布</span>
		<span>电话核实</span>
		<span>房源上架</span>
	</view>
	<!-- 图标显示进程部分结束 -->

	<form>
		<view class='biaodan'>
			<label>手机号
				<span class="xing">*</span>
			</label>
			<input type='text' bindblur="getPhone" class='inp' placeholder-class='pla' placeholder='请输入电话号码' />
		</view>

		<view class='biaodan'>
			<label>姓名
				<span class="xing">*</span>
			</label>
			<input type='text' bindblur="getName" class='inp' placeholder-class='pla' placeholder='您的姓名' />
		</view>

		<view class='biaodan' style='margin-top:30rpx;'>
			<label>意向区域
				<span class="xing">*</span>
			</label>
			<input type='text' bindblur="getLocal" class='inp' placeholder-class='pla' placeholder='请输入' />
		</view>

		<view class='biaodan'>
			<label>预算区间价格
				<span class="xing">*</span>
			</label>
			<span class="sp">/m²</span>
			<input type='text' bindblur="getMin" class='inpu' placeholder-class='pla' placeholder='请输入' />
			<span style="float:left;font-size:28rpx;line-height:60rpx;">至</span>
			<input type='text' bindblur="getMax" class='inpu' placeholder-class='pla' placeholder='请输入' />
		</view>

		<view class='biaodan' style='margin-top:30rpx'>
			<label>意向户型
				<span class="xing">*</span>
			</label>
			<input type='text' class='inp' disabled='disabled' bindtap='clickMe' value="{{month}}{{day}}" />

		</view>

		<view class='biaodan'>
			<label>面积
				<span class="xing">*</span>
			</label>
			<span class="sp">㎡</span>
			<input type='text' class='inp-p' bindblur="getArea" placeholder-class='pla' placeholder='请输入' />
		</view>

		<view class='biaodan'>
			<label>装修
				<span class="xing">*</span>
			</label>
			<input type='text' class='inp' disabled='disabled' bindtap='clickMe1' value="{{year}}" />
		</view>

    	<button class='last' bindtap="go">立即委托</button>
	</form>

	<!-- 表单收集结束 -->




	<view class='queding' wx:if="{{tee}}">
		<picker-view indicator-style="height: 40px;" value="{{value}}" bindchange="bindChange" class='change'>
			<picker-view-column>
				<view wx:for="{{months}}" style="line-height: 40px;font-size:28rpx;color:black;">{{item}}</view>
			</picker-view-column>
			<picker-view-column>
				<view wx:for="{{days}}" style="line-height: 40px;font-size:28rpx;color:black;">{{item}}</view>
			</picker-view-column>
		</picker-view>
		<button class='btn' bindtap='close'>确定</button>
	</view>

	<!-- 滑动选择部分 装修 -->
	<view class='queding' wx:if="{{te}}" bindtap='close'>
		<picker-view indicator-style="height: 40px;" value="{{value}}" bindchange="bindChange1" class='change'>
			<picker-view-column>
				<view wx:for="{{years}}" style="line-height: 40px;font-size:28rpx;color:black;">{{item}}</view>
			</picker-view-column>
		</picker-view>
		<button class='btn' bindtap='close'>确定</button>
	</view>
	<!-- 滑动选择部分结束 -->





</view>