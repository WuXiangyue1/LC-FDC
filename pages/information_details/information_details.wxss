/* pages/information_details/information_details.wxss */
@import '/pages/index/ico.wxss';
page{
  background-color: rgba(220, 220, 220, 0.234);
}
.information_details{
background-color: #fff;
width: 100%;
height: 280rpx;
}
.information_details_title{
 color: rgb(48, 45, 45);
 font-size: 36rpx;
 width: 97%;
 margin-left:3%;
 height: 100rpx;
}
.information_details_img{
 display: flex;
 margin-top: 4%;
 width: 97%;
 margin-left:4%;
 height: 150rpx;
}
.img image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.information_details_author{
  margin-left: 3%;
  width: 50%;
  height: 150rpx;
}
.author{
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: gray;
}
.fabu_time{
  color: gray;
  width:300rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
.content{
  width: 100%;
  height: 100%;
  text-align: left;
}
.con{
  color: rgb(48, 45, 45);
  font-size: 28rpx;
  line-height: 60rpx;
  margin: 5% auto;
  width: 90%;
  height: auto;
}
.hot_news{
  width: 100%;
  height: 500rpx;
  background-color: #fff;
}
.news{
  display: flex;
  line-height: 120rpx;
  width: 100%;
  height: 120rpx;
  border-bottom: 2rpx solid gainsboro;
}
.news_img{
  margin: 0 0 0 3%;
  width: 50rpx;
  height: 50rpx;
}
.icon-xinwen{font-size:38rpx;color: red;}
.news image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 8%;
  margin-left: 5%;
}
.news_title{
  margin-left:10rpx;
  font-size: 32rpx;
  line-height: 120rpx;
  width: 100%;
  height: 120rpx;
}
.remen{
  width: 90%;
  height: 80rpx;
  border-bottom: 2rpx solid gainsboro;
  margin-left: 5%;
}
.title{
  line-height: 80rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}