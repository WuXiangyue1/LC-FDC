<!--pages/details/details.wxml-->
<!--slider-->
<swiper indicator-dots="false" autoplay="true" interval="3000" duration="1000" circular="true">
	<block wx:for="{{imgArr}}" wx:key="index">
		<swiper-item>
			<image class='slide' src="{{item}}" bindtap='previewImg' data-index='{{index}}'></image>
			<view class='idx'><text>{{index+1}}/{{imgArr.length}}</text></view>
		</swiper-item>
	</block>
</swiper>
<!-- 2019年6月19日11:01:55 -->
<!-- 具体位置详情 -->
<view class='dizhi'>
	<text class='title'>{{information.name}}</text>
	<span class="iconfont icon-fangyuan_zaishou"></span>
	<text class='other_name'></text>
	<view>
		<text class='raduce' style='background:#FCF1DF;color:#F0C07D;'>优惠打折</text>
		<text class='raduce' style='background:#FCE4E0;color:#FE7F78'>小户型</text>
		<text class='raduce' style='background:#E3F3FD;color:#72B9F6'>低总价</text>
	</view>
	<text class='other_name'>楼房均价：<text style='color:orangered'>{{information.price}}元/m²</text></text>
	<text class='other_name'>格局户型：<text style='color:black'>{{information.area}}m²  {{information.type}}</text></text>
	<text class='other_name'>小区配套：<text style='color:black'>{{tags[0]}}、{{tags[1]}}、{{tags[2]}}
  </text></text>
</view>

<!-- 户型图 -->
<view class="page-section-spacing">
	<scroll-view class="scroll-view_H" scroll-x="true"  style="width: 100%">
		<block wx:for="{{imgHuxingArr}}">
			<image style="width:390px;padding:0 20rpx" src='{{item}}' data-index="{{index}}" bindtap='previewHuxingImg'></image>
		</block>

	</scroll-view>
</view>


<!-- 项目参数 -->
