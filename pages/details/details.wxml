<!--pages/details/details.wxml-->
<!--slider-->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
	<block wx:for="{{imgArr}}" wx:key="index">
		<swiper-item>
			<image class='slide' src="{{item}}" bindtap='previewImg' data-index='{{index}}'></image>
			<view class='idx'><text>{{index+1}}/{{imgArr.length}}</text></view>
		</swiper-item>
	</block>
</swiper>
<!-- 2019年6月19日11:01:55 -->
<!-- 具体位置详情 -->
<view class='dizhi'>
	<text class='title'>{{tit}}</text>
	<span class="iconfont icon-fangyuan_zaishou"></span>
	<text class='other_name'></text>
	<view>
		<text class='raduce' style='background:#FCF1DF;color:#F0C07D;'>{{other[0]}}</text>
		<text class='raduce' style='background:#FCE4E0;color:#FE7F78'>{{other[1]}}</text>
		<text class='raduce' style='background:#E3F3FD;color:#72B9F6'>{{other[2]}}</text>
	</view>
	<text class='other_name'>楼房均价：<text style='color:orangered'>{{prices}}</text></text>
	<text class='other_name'>格局户型：<text style='color:black'>95m²-123m² 3至4房</text></text>
	<text class='other_name'>小区配套：<text style='color:black'>社区公园、健身设施、游泳池</text></text>
</view>

<!-- 户型图 -->
<view class="page-section-spacing">
	<scroll-view class="scroll-view_H" scroll-x="true"  style="width: 100%">
		<block wx:for="{{imgHuxingArr}}">
			<image style="width:390px;padding:0 20rpx" src='{{item}}' data-index="{{index}}" bindtap='previewHuxingImg'></image>
		</block>

	</scroll-view>
</view>


